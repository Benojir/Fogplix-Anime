<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/header_bg"
    android:padding="12dp">

    <ImageButton
        android:id="@+id/closeDrawerBtn"
        style="@style/ExoStyledControls.Button.Bottom.RepeatToggle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Close"
        android:src="@drawable/close_24"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/main_theme_color"
            android:contentDescription="App Logo"
            android:scaleType="centerCrop"
            android:src="@drawable/fogplix_logo"
            app:shapeAppearanceOverlay="@style/circle"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/airstrike"
            android:shadowColor="@color/purple_700"
            android:text="@string/header_layout_sub_text"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_layout_version_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:shadowColor="@color/purple_700"
                android:text="Version: 2.3"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
