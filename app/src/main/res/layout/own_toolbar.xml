<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ownToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    tools:ignore="HardcodedText">

    <ImageButton
        android:id="@+id/navbarLeftBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:background="@drawable/round_transparent_ripple_button"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:contentDescription="Navigate"
        android:src="@drawable/arrow_back_48" />

    <TextView
        android:id="@+id/ownToolbarTV"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/navbarRightBtn"
        android:layout_toEndOf="@+id/navbarLeftBtn"
        android:gravity="center_vertical"
        android:text="Favorite"
        android:textColor="?attr/textColor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageViewMiddle"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/action_bar_logo"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/navbarRightBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:background="@drawable/round_transparent_ripple_button"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="Mic"
        android:src="@drawable/search_24" />

</RelativeLayout>